{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES2022",
    "module": "node16",
    "rootDir": "./src",
    "moduleResolution": "node16",
    "baseUrl": "./",
    "sourceMap": true,
    "outDir": "./dist",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "newLine": "lf"
  },
  "exclude": [
    "./dist",
    "./citester",
    "./node_modules",
    "./src/**/*.test.ts",
    "./src/__tests__",
    "./coverage",
    "./vitest.config.ts"
  ]
}
